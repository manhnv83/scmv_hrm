@using Mvc5Application1.Data.Model
@model hrm_t_employee_base

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_LoadingPartial")

@using (Html.BeginForm("SaveBasicInformation", "Individual", FormMethod.Post, new { @id = "formBasicInformation", @novalidate = "", @class = "form-horizontal form-label-left" }))
{
    @Html.AntiForgeryToken()
    <span class="section">Cơ bản</span>
    <!-- fullName -->
    <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fullName">
            Họ tên <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input value="@Model.maiden_name" id="fullName" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2"
                    name="fullName" placeholder="e.g Nguyễn Văn An" required="required" type="text" disabled>
        </div>
    </div>
    <!-- /fullName -->
    <!-- fullNameEnglish -->
    <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fullNameEnglish">
            Họ tên (tiếng Anh)
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input value="@Model.maiden_name_eng" id="fullNameEnglish" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2"
                    name="fullNameEnglish" placeholder="e.g Jon Doe" type="text" disabled>
        </div>
    </div>
    <!-- /fullNameEnglish -->
    <!-- gender -->
    <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="gender">
            Giới tính
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <select class="form-control" id="gender" name="gender" gender="@Model.sex_div" disabled>
                <option>Male</option>
                <option>Female</option>
            </select>
        </div>
    </div>
    <!-- /gender -->
    <!-- bloodGroup -->
    <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="bloodGroup">
            Nhóm máu
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <select class="form-control" id="bloodGroup" name="bloodGroup" bloodgroup="@Model.blood_type_div" disabled>
                <option>Unknow</option>
                <option>A</option>
                <option>B</option>
                <option>O</option>
                <option>AB</option>
            </select>
        </div>
    </div>
    <!-- /bloodGroup -->
    <!-- homeTown -->
    <div class="item form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="homeTown">
            Quê quán
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <textarea class="form-control" id="homeTown" name="homeTown" rows="3" cols="1" readonly disabled>@Model.hometown_name</textarea>
        </div>
    </div>
    <!-- /homeTown -->
    <!-- dateOfBirth -->
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Ngày sinh <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input value="@Model.birth_date.Value.ToString(CommonString.DateFormat)" id="dateOfBirth" name="dateOfBirth" class="date-picker form-control col-md-7 col-xs-12 active" required="required" type="text" disabled>
            </div>
        </div>
    <!-- /dateOfBirth -->
    <!-- Avatar -->
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                Ảnh đại diện
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="btn-group">
                    <label class="btn btn-primary btn-upload" for="fileImport" title="Upload image file">
                        <input class="sr-only" id="fileImport" name="fileImport" accept="image/*" type="file">
                        <span class="docs-tooltip" data-toggle="tooltip" title="" data-original-title="Import image with Blob URLs">
                            <span class="fa fa-upload"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
    <!-- /Avatar -->
    <!-- HR -->
        <div class="ln_solid"></div>
    <!-- /HR -->
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <button type="reset" class="btn btn-primary">Reset</button>
                <button id="submitBtn" type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
}

<script>
    $(window).on("load", function () {
        var bloodgroup = $('#bloodGroup').attr("bloodgroup");
        var gender = $('#gender').attr("gender");
        $('select[name="gender"]').val(gender);
        $('select[name="bloodGroup"]').val(bloodgroup);
    });
</script>